{{#each data}}
<tr data-id="{{id}}" class="zeile">
    <td>{{id}}</td>
    <td>{{name}}</td>
    <td>{{kraftstoff}}</td>
    <td>
        <div class="colordiv">
            <div class="colorbox" style="background-color: {{farbe}};"></div>
            <div style="position: relative; left: 10%;">{{farbe}}</div>
        </div>
    </td>
    <td>{{bauart}}</td>
    <td class="dateedit">{{date}}</td>
    <td>{{tanken}}</td>
    <td class="bemerkung"><div class="button grey lighten-2" style="overflow: hidden; max-height: 65px;">{{{bemerkung}}}</div></td>
    {{#ifEquals status "true"}}
        <td><i class="material-icons left green-text status">done</i></td>
    {{else}}
        <td><i class="material-icons left red-text status">close</i></td>
    {{/ifEquals}}
    <td class="action">
        <div class="hover-text material-icons left blue-text tooltip tanken">
            <i class="material-icons left blue-text">directions_car</i>
            <span class="tooltip-text" id="bottom">Tanken</span>
        </div>
        <div class="hover-text material-icons left green-text tooltip edit">
            <i class="material-icons left green-text">edit</i>
            <span class="tooltip-text" id="bottom">Bearbeiten</span>
        </div>
        <div class="hover-text material-icons left red-text tooltip delete">
            <i class="material-icons left red-text tooltip">delete</i>
            <span class="tooltip-text" id="bottom">LÃ¶schen</span>
        </div>
    </td>
</tr>
{{/each}}